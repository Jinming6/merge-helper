{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src", "rollup.config.ts"],
  "exclude": ["node_modules", "**/test/*"]
}
